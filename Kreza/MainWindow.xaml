<Window x:Class="Kreza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KAREZA"  Height="504" Width="705" Background="#FFD6DBE9">
    <Grid  >
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Background.png" />
        </Grid.Background>


        <TextBlock Height="20" Text="Songs" Foreground="White" MouseDown="ViewAllSongs" Margin="42,157,615.4,297.4"/>
        <MediaElement Width="1" Height="1" Opacity="0" Name="ME1" Source=""></MediaElement>
        <TextBlock Text="Open Songs" Foreground="White" MouseDown="OpeningFileDialog" Margin="42,286,577.4,166.4"/>
        <ListBox Background="#151123" Foreground="White"  MouseDoubleClick="SongsList_MouseDoubleClick" x:FieldModifier="public" BorderBrush="#151123" Name="SongsList" HorizontalAlignment="Left" Height="300" Margin="506,98,0,76.4" VerticalAlignment="Center" Width="169" Grid.Column="0"  SelectionMode="Single" FontFamily="Papyrus"/>
        <Image  Name="AlbumArt" Margin="282,98,197.4,159.4"/>
        <Button Name="PauseBtn"  Content="Play" HorizontalAlignment="Left" Margin="393,437,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Name="StopBtn" Content="Stop" HorizontalAlignment="Left" Margin="282,437,0,0" VerticalAlignment="Top" Width="75" Click="StopBtn_Click"/>
        <Button Name="ForBtn" Content="Forword" HorizontalAlignment="Left" Margin="503,437,0,0" VerticalAlignment="Top" Width="75" Click="ForBtn_Click"/>
        <Button Name="BackBtn" Content="Backword" HorizontalAlignment="Left" Margin="178,437,0,0" VerticalAlignment="Top" Width="75" Click="BackBtn_Click"/>
        <Button Name="MuteBtn" Content="Mute" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="600,437,0,0" Click="MuteBtn_Click"/>



    </Grid>
</Window>
